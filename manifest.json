{
    "manifest_version": 3,
    "name": "Page-in-Picture: View your webpage in PiP mode.",
    "description": "makes it possible to open an always-on-top browser window",
    "version": "1.0",
    "permissions": [
      "contextMenus",
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "main.js"
    },
  "action": {
    "default_title": "page-in-picture"
  },
  "icons":{
    "16": "icons/icon64.png",
    "32": "icons/icon128.png",
    "48": "icons/icon256.png",
    "128": "icons/icon512.png"
  }
}
  